{
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": true,
    "python.formatting.provider": "autopep8",
    "python.formatting.autopep8Args": [
        "--max-line-length", "120",
        "--aggressive"
    ],
    "editor.formatOnSave": true,
    "files.exclude": {
        "**/__pycache__": true,
        "**/.DS_Store": true,
        "**/.git": true,
        "**/.pytest_cache": true,
        "**/.venv": true,
        "**/venv": true,
        "**/env": true
    }
}
